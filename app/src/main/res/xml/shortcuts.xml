<shortcuts xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="openbooks"
        android:enabled="true"
        android:icon="@drawable/icon"
        android:shortcutShortLabel="@string/book_status_started"
        android:shortcutLongLabel="@string/book_status_started"
        android:shortcutDisabledMessage="@string/book_status_started"
        tools:ignore="UnusedAttribute">
        <intent
            android:action="com.khnadi.library.SHOW_OPEN_BOOKS"
            android:targetPackage="com.khnadi.library"
            android:targetClass="com.khnadi.library.BookListActivity">

        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
    <shortcut
        android:shortcutId="unreadbooks"
        android:enabled="true"
        android:icon="@drawable/icon"
        android:shortcutShortLabel="@string/book_status_none"
        android:shortcutLongLabel="@string/book_status_none"
        android:shortcutDisabledMessage="@string/book_status_none"
        tools:ignore="UnusedAttribute">
        <intent
            android:action="com.khnadi.library.SHOW_UNREAD_BOOKS"
            android:targetPackage="com.khnadi.library"
            android:targetClass="com.khnadi.library.BookListActivity">

        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>